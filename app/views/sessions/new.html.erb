<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <%= form_tag sessions_path do %>

      <div class="form-group">
        <%= label_tag :email, nil, class: "control-label" %>
        <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "Enter email" %>
      </div>

      <div class="form-group">
        <%= label_tag :password, nil, class: "control-label" %>
        <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %>
      </div>

      <%= submit_tag "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
